@using ApiMicrosservicesWeb.Models.MicrosservicesProduct
@model IEnumerable<ProductViewModel>
<link rel="stylesheet" href="/css/product.css" asp-append-version="true" />

<form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-2">
                <a href="/Home/ProductDetails/@product.Id">
                    <div class="card">
                        <img src="@Url.Content(product.Images[0])" class="img-thumbnail" />
                        <div class="card-body">
                            <h5 class="card-title mb-2">
                                @product.Name
                            </h5>
                            <p class="cart-text text-black">
                                <b>@product.Price.ToString("C")</b>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</form>